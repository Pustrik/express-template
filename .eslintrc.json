{
    "env": {
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [],
    "root": true,
    "ignorePatterns": [".eslintrc.js"],
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "camelcase": "error",
        "semi": ["error", "always"],
        "quotes": ["error", "single", {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }]
    }
}
